<form
  action="/add-category"
  method="POST"
  class="rounded-lg bg-white p-6 shadow-md"
>
  <h2 class="mb-4 text-xl font-semibold">Add a New Category</h2>

  <!-- Category Information -->
  <div class="rounded-lg border p-4">
    <label class="block font-medium text-gray-700">Category Name</label>
    <input
      type="text"
      name="categoryName"
      class="mt-1 w-full rounded-lg border border-gray-300 p-2 focus:ring focus:ring-red-300"
      placeholder="Enter category name"
      required
    />
  </div>

  <!-- Submit Button -->
  <div class="mt-4">
    <button
      type="submit"
      class="w-full rounded-lg bg-red-600 px-4 py-2 text-white transition hover:bg-red-700"
    >
      Add Category
    </button>
  </div>
</form>
