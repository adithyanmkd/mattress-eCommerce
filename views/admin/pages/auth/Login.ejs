<% 
  const authHeading = {
    title: "Welcome Admin", 
    description: "We are glad to see you back with us"
  }

  const authImage = {
    src: "/images/auth/kid-image.svg",
    alt: "kid login image" 
  }

  const inputFields = [{
    icon: {
    iconSrc: "/images/icons/user.svg",
    altText: "user icon"
  },
  name: "username",
  type: "text",
  placeholder: "Enter your username"
  },
  {
    icon: {
    iconSrc: "/images/icons/lock.svg",
    altText: "lock icon"
  },
  name: "password",
  type: "password",
  placeholder: "Enter your password"
  }]
%>

<div class="h-full items-center justify-evenly md:flex md:flex-row-reverse">
  <!-- heading block and hero image -->

  <div class="pb-16 md:pb-0">
    <!-- auth image passing -->
    <%- include("../../partials/atoms/AuthImage.ejs", {...authImage}) %>
    <!-- auth heading block -->
    <%- include("../../partials/molecules/AuthHeading.ejs", {...authHeading, classname: "md:hidden"}) %>
  </div>

  <!-- heading block and hero image ended -->
  <!-- login form started -->

  <form
    class="w-96"
    id="admin-login-form"
    action="/admin/login"
    method="post"
    enctype="application/x-www-form-urlencoded"
  >
    <%- include("../../partials/molecules/AuthHeading", {...authHeading}) %>
    <ul class="space-y-6">
      <% inputFields.forEach((field) => { %>
      <%- include("../../partials/atoms/InputField", {...field}) %>
      <% }) %>

      <!-- error box started -->
      <li
        id="error-box"
        class="p-4 mb-4 hidden text-sm text-red-800 rounded-lg bg-red-50 dark:text-red-400"
      >
      </li>
      <!-- error box ended -->
      <li class="pt-4">
        <button
          class="w-full rounded-xl bg-[#1A1A1A] py-4 text-white hover:cursor-pointer hover:bg-black"
          type="submit"
        >
          Login
        </button>
      </li>
    </ul>
  </form>

  <!-- login form ended -->
</div>
