 <div class="max-w-5xl mx-auto bg-white shadow-md rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
            <input type="text" placeholder="Search" class="border rounded-lg px-3 py-2 w-1/3">
            <a href="/admin/categories/add" class="bg-purple-600 text-white px-4 py-2 rounded-lg">+ Add Category</a>
        </div>

        <table class="w-full border-collapse">
            <thead class="bg-gray-100 text-gray-600 text-left">
                <tr>
                    <th class="p-3">CATEGORIES</th>
                    <th class="p-3">TOTAL PRODUCTS</th>
                    <th class="p-3">TOTAL EARNING</th>
                    <th class="p-3">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr class="border-t">
                        <td class="p-3 flex items-center space-x-3">
                            <img src="<%= category.image %>" alt="<%= category.name %>" class="w-12 h-12 rounded-lg">
                            <div>
                                <p class="font-semibold"><%= category.name %></p>
                                <p class="text-sm text-gray-500"><%= category.description %></p>
                            </div>
                        </td>
                        <td class="p-3"><%= category.totalProducts %></td>
                        <td class="p-3 text-green-600 font-semibold">$<%= category.totalEarnings.toFixed(2) %></td>
                        <td class="p-3">
                            <button class="text-gray-500 hover:text-gray-700">
                                ✏️
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>