<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="flex w-full max-w-3xl rounded-lg bg-white shadow-lg">
    <!-- Left Side: OTP Form -->
    <div class="w-1/2 p-10">
      <h2 class="text-2xl font-semibold">Verification Code</h2>
      <p class="mt-2 text-sm text-gray-500">
        We have sent the verification code to your email address.
      </p>

      <form action="/otp-verify" method="post" class="mt-5">
        <input class="hidden" name="email" type="text" value="<%- email %>" />
        <input
          type="text"
          name="otp"
          id="otp"
          class="block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
          placeholder="Enter 6-digit OTP"
          maxlength="6"
          required
        />
        <!-- error message box started -->
        <% if(typeof error !== "undefined" && error) { %>
        <div
          id="error-box"
          class="mt-4 mb-4 rounded-lg bg-red-50 p-4 text-sm text-red-800 dark:text-red-400"
        >
          <%- error %>
        </div>
        <% } %>
        <!-- error message box ended -->

        <!-- Success message box started -->
        <% if (typeof success !== "undefined" && success) { %>
        <div
          id="success-box"
          class="mt-4 mb-4 rounded-lg border border-green-400 bg-green-50 p-4 text-sm text-green-800"
        >
          <%- success %>
        </div>
        <% } %>
        <!-- Success message box ended -->
        <button
          type="submit"
          class="mt-4 w-full cursor-pointer rounded-md bg-blue-600 py-2 text-white hover:bg-blue-700"
        >
          Confirm
        </button>
      </form>

      <p class="mt-4 text-sm text-gray-500">
        Didn't get OTP?
        <a href="/resend-otp" class="font-medium text-blue-500">Resend it</a>
      </p>
    </div>

    <!-- Right Side: Image -->
    <div class="w-1/2">
      <img
        src="/images/auth/kid-image.svg"
        alt="OTP Image"
        class="h-full w-full rounded-r-lg object-cover"
      />
    </div>
  </div>
</div>
