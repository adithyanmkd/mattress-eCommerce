                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="p-6">
                <form class="space-y-4" onsubmit="event.preventDefault();">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Full Name<span class="text-red-500">*</span></label>
                        <input type="text" value="Adithyan c" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email<span class="text-red-500">*</span></label>
                        <input type="email" value="adithyankalladi@gmail.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Mobile No.<span class="text-red-500">*</span></label>
                        <input type="tel" value="8848911254" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Address (House No, Building, Street Area)<span class="text-red-500">*</span></label>
                        <input type="text" value="Kinfra" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Locality/Town</label>
                            <input type="text" value="Kakkanchery" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Pincode<span class="text-red-500">*</span></label>
                            <input type="text" value="673620" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">City/District<span class="text-red-500">*</span></label>
                            <input type="text" value="KOZHIKODE" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-200">
