                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" checked class="rounded text-yellow-500 focus:ring-yellow-200">
                        <label class="ml-2 text-sm text-gray-700">Make this default address</label>
                    </div>
                    <button type="submit" class="w-full bg-yellow-400 text-black py-2 rounded-md hover:bg-yellow-500 transition-colors font-medium">
                        Save Address
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        const modal = document.getElementById('editModal');

        // Show modal
        function showModal() {
            modal.classList.add('show');
            // Add click event listener to close modal when clicking outside
            modal.addEventListener('click', closeModalOnOutsideClick);
        }
        
        // Close modal
        function closeModal() {
            modal.classList.remove('show');
            // Remove the event listener when modal is closed
            modal.removeEventListener('click', closeModalOnOutsideClick);
        }

        // Close modal when clicking outside
        function closeModalOnOutsideClick(event) {
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>